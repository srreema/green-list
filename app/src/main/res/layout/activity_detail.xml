<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <eu.fiskur.simpleviewpager.SimpleViewPager xmlns:simpleviewpager="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_hero_image"
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:clickable="true"
        android:elevation="8dp"
        android:foreground="@drawable/shape_ripple_image"
        app:layout_collapseMode="parallax"
        simpleviewpager:scaleType="CENTER_CROP" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_below="@+id/iv_hero_image"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_medium"
                    android:text="New Delhi"
                    android:textAllCaps="true"
                    android:textColor="@color/app_dark_200"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:transitionName="shared_title" />

                <TextView
                    android:id="@+id/tv_label_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewTitle"
                    android:fontFamily="@string/font_family_regular"
                    android:text="1200 hotels in this city"
                    android:textColor="#BCBDBC"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_label_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@string/font_family_medium"
                    android:text="18Â°C"
                    android:textAllCaps="true"
                    android:textColor="@color/medium_green_600"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:transitionName="shared_title" />

                <TextView
                    android:id="@+id/tv_label_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_label_3"
                    android:fontFamily="@string/font_family_regular"
                    android:text="Coudy"
                    android:textColor="@color/medium_green_600"
                    android:textSize="14sp" />
            </RelativeLayout>

            <include layout="@layout/item_bank_min" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="24dp"
                android:background="@color/medium_green_600" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>