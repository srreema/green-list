<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/recyclerViewImageList"
    android:layout_margin="2dp">

    <EditText
        android:id="@+id/editTextParameter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imageViewDelete"
        android:fontFamily="@string/font_family_light"
        android:inputType="text|textCapWords"
        android:maxLines="1"
        android:textColor="@color/app_dark_100"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageViewDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:src="@drawable/ic_delete_forever_white_24px"
        android:tint="@color/app_red" />
</RelativeLayout>